<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="image"
            type="android.graphics.Bitmap" />
    </data>

    <androidx.cardview.widget.CardView
        style="@style/AppTheme.SelectableCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_padding_medium"
        android:layout_marginEnd="@dimen/material_padding_medium">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_result_height"
            android:paddingTop="@dimen/material_padding_small"
            android:paddingBottom="@dimen/material_padding_small"
            app:imageBitmap="@{image}"
            tools:src="@drawable/image_placeholder" />
    </androidx.cardview.widget.CardView>
</layout>