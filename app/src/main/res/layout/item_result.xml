<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="kotlin.Unit" />

        <import type="kotlin.jvm.functions.Function0" />


        <variable
            name="image"
            type="android.graphics.Bitmap" />

        <variable
            name="onImageClick"
            type="Function0&lt;Unit>" />
    </data>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_result_height"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> onImageClick.invoke()}"
        android:paddingStart="@dimen/material_padding_large"
        android:paddingTop="@dimen/material_padding_small"
        android:paddingEnd="@dimen/material_padding_large"
        android:paddingBottom="@dimen/material_padding_small"
        app:imageBitmap="@{image}"
        tools:src="@drawable/image_placeholder" />
</layout>