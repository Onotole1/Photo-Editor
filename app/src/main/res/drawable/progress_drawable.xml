<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <stroke
                android:width="@dimen/material_corner"
                android:color="@android:color/black" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <layer-list>
                <item
                    android:bottom="@dimen/progress_drawable_border"
                    android:left="@dimen/progress_drawable_border"
                    android:right="@dimen/progress_drawable_border"
                    android:top="@dimen/progress_drawable_border">
                    <shape>
                        <solid android:color="@color/color_accent" />
                    </shape>
                </item>
            </layer-list>
        </clip>
    </item>
</layer-list>