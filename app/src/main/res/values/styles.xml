<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="fontFamily">@font/roboto_regular_family</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.ProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_drawable</item>
    </style>

    <style name="AppTheme.ItemResultLayout" parent="AppTheme.SelectableCardView">
        <item name="android:layout_height">@dimen/item_result_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppTheme.SelectableCardView" parent="CardView">
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="AppTheme.LargeWhiteText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_medium_family</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>
</resources>
